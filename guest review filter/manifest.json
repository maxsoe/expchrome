{
  "name": "9232 - Guest review filter on HSR",
  "version": "1",
  "description": "Adds guest riview filters on HSR",

  "browser_action": {
    "name": "Manipulate DOM",
    "icons": ["icon.png"],
    "default_icon": "icon.png"
  },

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "content_scripts": [
    {
      "js": [ "jquery-2.0.2.min.js", "contentscript.js" ],
      "css": ["customStyles.css"],
      "matches": ["https://www.expedia.com/Hotel-Search*"]
    }
  ],

  "web_accessible_resources": [
   "guestreviewfilter01.html",
   "guestreviewfilter02.html",
   "guestreviewfilter03.html",
   "guestreviewfilter04.html"
 ],

  "manifest_version": 2
}
